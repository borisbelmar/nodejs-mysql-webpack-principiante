<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Hello Bulma!</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>

<body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="https://bulma.io">
                <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
            </a>

            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item">
                    Home
                </a>

                <a class="navbar-item">
                    Documentation
                </a>

                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">
                        More
                    </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item">
                            About
                        </a>
                        <a class="navbar-item">
                            Jobs
                        </a>
                        <a class="navbar-item">
                            Contact
                        </a>
                        <hr class="navbar-divider">
                        <a class="navbar-item">
                            Report an issue
                        </a>
                    </div>
                </div>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <a class="button is-primary">
                            <strong>Sign up</strong>
                        </a>
                        <a class="button is-light">
                            Log in
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column">
                    <% for(var i = 0; i < news.length; i++) { %>
                    <div class="box">
                        <h2 class="is-size-7">Noticia <%= news[i].id_news %></h2>
                        <h4 class="is-title is-size-4"><strong><%= news[i].title %></strong></h4>
                        <p class="is-size-6"><%= news[i].news %></p>
                        <p class="is-size-7"><em>Creado en: <%= news[i].data_created %></em></p>
                    </div>
                    <% } %>
                </div>
                <div class="column">
                    <div class="box">
                        <form action="/news" method="post">
                            <div class="field">
                                <label class="label">Título</label>
                                <div class="control">
                                    <input class="input" type="text" name="title" placeholder="Título de la noticia">
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Contenido</label>
                                <div class="control">
                                    <textarea class="textarea" name="news" placeholder="Contenido de la noticia"></textarea>
                                </div>
                            </div>               
                            <div class="field is-grouped">
                                <div class="control">
                                    <input type="submit" class="button is-primary"></input>
                                </div>
                                <div class="control">
                                    <button class="button is-text">Cancel</button>
                                </div>
                            </div>
                        </form>                      
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>